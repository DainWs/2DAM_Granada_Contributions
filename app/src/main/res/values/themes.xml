<resources>
    <style name="GranadaContributions" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="GranadaContributions.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GranadaContributions.LoginActivity">
        <item name="colorPrimary">@color/toolbar_background_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorBackground">@color/white</item>
        <item name="colorContainer">@color/white</item>
        <item name="colorText">@color/black</item>

        <item name="colorOnPrimary">@color/design_default_color_error</item>
    </style>

    <style name="GranadaContributions.MainActivity">
        <item name="colorPrimary">@color/toolbar_background_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorBackground">@color/main_activity_background_color</item>
        <item name="colorContainer">@color/main_activity_items_background_color</item>
        <item name="colorText">@color/main_activity_text_color</item>

        <item name="colorOnPrimary">@color/design_default_color_error</item>
    </style>

    <style name="GranadaContributions.PreferencesActivity">
        <item name="colorPrimary">@color/toolbar_background_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorBackground">@color/preferences_background_color</item>
        <item name="colorContainer">@color/preferences_items_background_color</item>
        <item name="colorText">@color/preferences_text_color</item>

        <item name="colorOnPrimary">@color/design_default_color_error</item>
    </style>
</resources>