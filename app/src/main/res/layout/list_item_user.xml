<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_user_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/user_image"
        android:padding="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_user_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#FF000000"
            android:textSize="14sp"
            tools:text="Jose Antonio" />

        <TextView
            android:id="@+id/item_user_correo"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#99000000"
            android:textSize="14sp"
            tools:text="jose.ant....@gmail.com" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/delete_user_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/delete_button_text"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:srcCompat="@mipmap/app_delete" />

</LinearLayout>