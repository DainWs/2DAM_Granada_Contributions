<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.josealex.granadacontributions">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_icon"
        android:supportsRtl="true"
        android:theme="@style/GranadaContributions">
        <activity
            android:name=".PreferencesActivity"
            android:label="@string/app_name"
            android:theme="@style/GranadaContributions.PreferencesActivity.NoActionBar" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/GranadaContributions.MainActivity.NoActionBar" />

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/GranadaContributions.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>